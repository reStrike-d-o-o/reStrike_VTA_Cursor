{
  "$schema": "https://beta.tauri.app/schema.json",
  "identifier": "com.restrike.vta",
  "productName": "reStrike VTA",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "cd ui && npm run start:fast",
    "beforeBuildCommand": "cd ui && npm run build",
    "frontendDist": "../ui/build",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "reStrike VTA",
        "width": 350,
        "height": 1080,
        "minWidth": 350,
        "maxWidth": 350,
        "minHeight": 1080,
        "decorations": true,
        "alwaysOnTop": false,
        "center": true,
        "visible": true,
        "focus": true,
        "url": "http://localhost:3000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"]
  },
  "plugins": {
    "shell": {
      "open": true,
      "execute": true,
      "sidecar": true,
      "scope": [
        {
          "name": "mpv",
          "cmd": "mpv",
          "args": ["--start=10"]
        }
      ],
      "scope": {
        "allow": [
          {
            "name": "open",
            "cmd": "open",
            "args": ["https://accounts.google.com/o/oauth2/auth"]
          }
        ]
      }
    },
    "fs": {
      "readFile": true,
      "writeFile": true,
      "readDir": true,
      "createDir": true,
      "removeDir": true,
      "removeFile": true,
      "scope": ["$APPDATA/reStrikeVTA/**", "$APPDATA/reStrikeVTA/log/**"]
    },
    "http": {
      "request": true,
      "scope": ["https://**"]
    },
    "notification": {
      "all": false
    },
    "globalShortcut": {
      "register": true,
      "unregister": true,
      "unregisterAll": true
    },
    "event": {
      "listen": true,
      "emit": true
    }
  }
} 